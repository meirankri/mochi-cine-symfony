{% extends 'base.html.twig' %}

{% block body %}
	<h1 class="text-center">tous les films</h1>
     
	<div class="container">
		<div class="row">
		{% for film in film %}
		<div class="col-md-4">
              <div class="card mb-4 box-shadow">
                
                <div class="card-body">
                  <p class="text-center">{{film.title}}</p>
                 <p class="card-text">
                  {% if film.image starts with 'http' %}
                    <img class="img-fluid" alt="" src="{{ film.image}} " >
                  {% else %}
                    <img class="img-fluid" alt="" src="{{ asset('uploads/images/' ~ film.image) }} " >
                    }
                  {% endif %}
                 </p>
                 <strong>Synopsis:</strong>
                  <p class="card-text article">{{film.synopsis}}</p>
                  <strong>Genre:</strong>
                  <p>{{film.category}}</p>


                  <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">
                     <a href=" {{path('deleteMovie', {'id' :film.id})}} ">delete</a>
                      
                    </div>
                    
                    <a href=" {{path('suite', {'id': film.id })}} " class="text-white"><button class="btn btn-primary"> lire la suite </button></a>
                   
                  </div>

                </div>
              </div>
            </div>
		{% endfor %}
		</div>
{% endblock %}
