{% extends 'base.html.twig' %}
{% block body %}
<div class="container">
		<div class="row">
		
		<div class="col-md-4">
              <div class="card mb-4 box-shadow">
                
                <div class="card-body">
                  <p class="text-center">{{film.title}}</p>
                 <p class="card-text">
                  {% if film.image starts with 'http' %}
                    <img class="img-fluid" alt="" src="{{ film.image}} " >
                  {% else %}
                    <img class="img-fluid" alt="" src="{{ asset('uploads/images/' ~ film.image) }} " >
                    
                  {% endif %}
                 </p>
                 <strong>Synopsis:</strong>
                  <p class="card-text article">{{film.synopsis}}</p>
                  <strong>Genre:</strong>
                  <p>{{film.category}}</p>


                  <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">
                     <a href=" {{path('deleteMovie', {'id' :film.id})}} ">delete</a>
                      
                    </div>
                  <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">
                     <a href=" {{path('editFilm', {'id' :film.id})}} ">edit</a>
                      
                    </div>                    
                   
                  </div>
                </div>
              </div>
            </div>
		
		</div>

{% endblock %}