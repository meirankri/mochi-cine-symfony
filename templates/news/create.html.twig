{% block title %}créer un article{% endblock %}

{% block body %}

{% if edit %}
	<h1>Modifier un article</h1>
	
	{% else %}
		<h1>créer un article</h1>
	
	{% endif %}


<label for="title">Titre</label>
{{ form_start(formNews) }}
	{{ form_widget(formNews.title) }}
	<div class="error">
	{{ form_errors(formNews.title) }}
	</div>

	<label for="contenue">contenue</label>
	{{ form_widget(formNews.content) }}
