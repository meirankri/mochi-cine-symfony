	{{ form_errors(formNews.image) }}	
	</div>
	<label for="">categorie</label>
	<div>
		{{form_widget(formNews.category)}}
	</div>
	<ul class="tags">
	 
            <li>{{ form_row(formNews.tags) }}</li>
       
     </ul>
	{% if edit %}
	<button class="btn btn-primary" type="submit">Modifier</button>
	{% else %}
	<button class="btn btn-primary" type="submit">Créer</button>
	{% endif %}
{{ form_end(formNews) }}
{% endblock %}
