{% extends 'base.html.twig' %}


{% block title %}tout les article{% endblock %}

{% block body %}

<h1 class="text-center mb-4">tous les articles</h1>

<div class="container">
	<div class="row">
		{% for article in article %}
		<div class="col-6 article">
			<p>{{ article.title }}</p>
			{% if article.image starts with 'http' %}
			<div><img src=" {{article.image}} " alt="" class="img img-fluid"></div>
		    {% else %}
		    <div><img src="{{ asset('uploads/images/' ~ article.image) }}" alt="" class="img img-fluid"></div>
		    {% endif %}
			<div> {{article.content | raw}} </div>
			<div> Rédigé le {{article.createdAt | date('d/m/Y:H:i') }} </div>
			
			<div>dans la categorie {{article.category.title}} </div>
			{% if article.tags is empty %}
			
		{% else %}
			<div>avec les tags <span>
				{{article.tags | join(', ')}}
			</span></div>
		{% endif %}
			<a href="{{ path('suite', {'id': article.id}) }}"><button class="btn btn-primary">lire la suite</button></a>
		</div>
	{% endfor %}
	</div>
</div>

{% endblock %}
